{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended"
	],

	"schedule": ["before 5am on monday"],
	"prHourlyLimit": 10,
	"labels": ["dependencies"],
	"packageRules": [
		{
			"matchCategories": ["js", "javascript", "ts", "typescript", "node", "npm", "nodejs"],
			"matchUpdateTypes": ["minor", "patch", "pin", "digest"],
			"automerge": true
		},
		{
			"matchCategories": ["rs", "rust", "cargo"],
			"matchCurrentVersion": ">=1.0.0",
			"matchUpdateTypes": ["patch", "minor"],
			"enabled": false
		},
		{
			"matchCategories": ["rs", "rust", "cargo"],
			"matchCurrentVersion": ">=0.1.0",
			"matchUpdateTypes": ["patch"],
			"enabled": false
		},
		{
			"matchCategories": ["rs", "rust", "cargo"],
			"matchPackageNames": ["trybuild"],
			"enabled": true
		}
	]
}
